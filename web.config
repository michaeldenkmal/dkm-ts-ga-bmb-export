<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- SPA-Fallback fÃ¼r React+Wouter unter /dkmfaktfe -->
        <rule name="DkmFakt SPA Fallback" stopProcessing="true">
          <!-- web.config liegt im /dkmfaktfe Ordner, daher reicht .* -->
          <match url=".*" />
          <conditions>
            <!-- Nur umschreiben, wenn es KEINE echte Datei -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- ...und kein echtes Verzeichnis ist -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <!-- Alles auf index.html in diesem Ordner umschreiben -->
          <action type="Rewrite" url="index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
